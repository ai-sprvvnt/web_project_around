[32m+[m[32m  function showInputError(form, input, config, message) {[m
[32m+[m[32m    const errorEl = form.querySelector(`#${input.id}-error`);[m
[32m+[m[32m    input.classList.add(config.inputErrorClass);[m
[32m+[m[32m    if (errorEl) {[m
[32m+[m[32m      errorEl.textContent = message;[m
[32m+[m[32m      errorEl.classList.add(config.errorClass);[m
[32m+[m[32m    }[m
[32m+[m[32m  }[m
[32m+[m
[32m+[m[32m  function hideInputError(form, input, config) {[m
[32m+[m[32m    const errorEl = form.querySelector(`#${input.id}-error`);[m
[32m+[m[32m    input.classList.remove(config.inputErrorClass);[m
[32m+[m[32m    if (errorEl) {[m
[32m+[m[32m      errorEl.textContent = "";[m
[32m+[m[32m      errorEl.classList.remove(config.errorClass);[m
[32m+[m[32m    }[m
[32m+[m[32m  }[m
[32m+[m
[32m+[m[32m  function checkInputValidity(form, input, config) {[m
[32m+[m[32m    if (!input.validity.valid) {[m
[32m+[m[32m      // mensaje por defecto del navegador[m
[32m+[m[32m      showInputError(form, input, config, input.validationMessage);[m
[32m+[m[32m    } else {[m
[32m+[m[32m      hideInputError(form, input, config);[m
[32m+[m[32m    }[m
[32m+[m[32m  }[m
[32m+[m
[32m+[m[32m  function hasInvalidInput(inputs) {[m
[32m+[m[32m    return inputs.some((i) => !i.validity.valid);[m
[32m+[m[32m  }[m
[32m+[m
